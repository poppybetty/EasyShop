<h3>My Orders</h3>
<table class="table table-striped table-bordered table-condensed">
	<head>
		<tr><th>Order No</th>
			<th>Order Date</th>
			<th>Status</th>
			<th>Total Price</th>
			<th>Actions</th>
			
		</tr>
	</thead>
	<tbody>
	<% for order in @orders %>
		<tr>
			<td><%= order.order_no %></td>
			<td><%= order.order_date %></td>
			<td><%= order.order_status %></td>
			<td><strong><%= format_money order.total_price %></strong></td>
			<td><%= link_to "Order Details", :controller => :store, :action => :order_details, :id => order %></td>
	</tr>
	<% end %>
	<tbody>
</table>