<h3>My Orders</h3>
<table class="table table-striped table-bordered table-condensed">
	<head>
		<tr><th>Order No</th>
			<th>Order Date</th>
			<th>Full Name</th>
			<th>Shipping Cost</th>
			<th>Total Price</th>
			
		</tr>
	</thead>
	<tbody>
	<% for order in @orders %>
		<tr>
			<td><%= order.order_no %></td>
			<td><%= order.order_date %></td>
			<td><%= order.customer.presentation_name %></td>
			<td><%= order.shipping_cost %></td>
			<td><%= order.total_price %></td>
	</tr>
	<% end %>
	<tbody>
</table>